name = Atomium Europa
description = The NextEuropa theme based on Atomium.
engine = phptemplate
core = 7.x
php = 5.2
base theme = atomium

;-------------- F E A T U R E S -------------
features[] = logo
features[] = name
features[] = slogan
features[] = favicon

;-------------- R E G I O N S -------------
regions[header_top] = "Header top"
regions[header_side] = "Header side"
regions[featured] = "Featured"
regions[tools] = "Tools"
regions[help] = "Help"
regions[sidebar_first] = "Sidebar left"
regions[sidebar_second] = "Sidebar right"
regions[content_top] = "Content top"
regions[content] = "Content"
regions[content_first] = "Content first"
regions[content_second] = "Content second"
regions[footer] = "Footer"

;-------------- P A N E L S -------------

;-------------- C S S -------------
stylesheets[all][] = dist/styles/tachyons.css
stylesheets[all][] = dist/styles/europa.css

;-------------- JS -------------
scripts[] = dist/scripts/europa.js

;-------------- Default Settings for theme-settings.php -------------
settings[theme_debug] = 0
settings[allow_css_double_underscores] = 1
settings[atomium_add_hook_classes] = 1


